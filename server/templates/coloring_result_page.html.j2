{% import "source_coloring.html.j2" as source_coloring %}
{% import "score_coloring.html.j2" as score_coloring %}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Result</title>
    <link rel="stylesheet" type="text/css" href="/static/style_result.css">
</head>
<body>
<a href="/factcheck">&lt; back</a>
<h1>Result of search</h1>
<div id="options-box">
    <label for="load-images">
        <input id="load-images" type="checkbox">
        Display graphs
    </label>
    <br>
    <label for="display-debug-chains">
        <input id="display-debug-chains" type="checkbox">
        Display debug chains
    </label>
    <br>
    <label for="display-top-chains">
        <input id="display-top-chains" type="checkbox">
        Display token's Top-10 chains
    </label>
</div>
<h2>Input</h2>
<p>{{ input_text }}</p>

<h2>Results</h2>

{% for result in results %}
    <h3> {{ result.name }} </h3>
    {%- if result.type == "chains" -%}
    	{{ source_coloring.render(result) }}
    {%- elif result.type == "score" -%}
        {{ score_coloring.render(result) }}
    {%- else -%}
        Unknown type: {{ result.type }}
    {%- endif -%}
{% endfor %}

<script src="/static/hover.js"></script>
</body>
</html>