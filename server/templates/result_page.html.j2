<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Result</title>
    <link rel="stylesheet" type="text/css" href="/static/style_result.css">
</head>
<body>
<h1>Result of search</h1>
<div id="options-box">
    <label for="load-images" style="align-content: center">
        <input id="load-images" type="checkbox" value="Load images">
        Display graphs
    </label>
</div>
<h2>Input</h2>
<p>{{ input_text }}</p>

<h2>Results</h2>

{#
results = [
    Result {
        name = "string",
        sources = [
            Source{
                url = "url",
                color = "color_class"
            },
            ...
        ],
        token_coloring = [
            TokenColored {
                url = "url",
                score = 1.0,
                chain = "chain sre representation",
                color_num = 11,
                token = "text"
            },
            ...
        ]
    },
    ...
]

#}

{% for result in results %}
    <h3> {{ result.name }} </h3>
    <table class="category-table" data-key="{{ result.key }}">
        <tr>
            <th>Colored text</th>
            <th>Sources ({{ result.sources|length }}) </th>
        </tr>
        <tr>
            <td class="src_text_box">
                {%- for token in result.token_coloring -%}
                    {%- if token.url is defined -%}
                        {#- Each token carries all of meta-information -#}
                        {#- TODO: Optimize -#}
                        <span class="color{{ token.color_num }} src_text"
                              data-source-url="{{ token.url }}"
                              data-score="{{ token.score }}"

                              data-target-pos="{{ token.target_pos }}"
                              data-target-likelihood="{{ token.target_likelihood }}"

                              data-target-text="{{ token.target_text[0] }}"
                              data-target-text-pre="{{ token.target_text[1] }}"
                              data-target-text-post="{{ token.target_text[2] }}"

                              data-source-text="{{ token.source_text[0] }}"
                              data-source-text-pre="{{ token.source_text[1] }}"
                              data-source-text-post="{{ token.source_text[2] }}"

                              data-chain="{{ token.chain|escape }}"
                        >
                            {{- token.token -}}
                        </span>
                    {%- else -%}
                        <span class="color{{ token.color_num }}">{{ token.token }}</span>
                    {%- endif -%}
                {%- endfor -%}
            </td>
            <td class="src_link_box">
                <ul>
                    {% for url, color_nums in result.sources %}
                        <li>
                            <a href="{{ url }}" class="source_reference" target="_blank">{{ url }}</a>
                            {% for num in color_nums %}
                                <span class="color{{ num }}">⏺︎</span>
                            {% endfor %}
                        </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
    </table>

{% endfor %}
<script src="/static/hover.js"></script>
</body>
</html>